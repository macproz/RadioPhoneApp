<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_all" >
    
    
    <LinearLayout 
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_status_bar"
        android:layout_marginLeft="@dimen/padding_left"
        android:background="@drawable/transparent"
        android:orientation="vertical"
        >
        
        <Button
            android:id="@+id/bt_raido"
            android:layout_width="@dimen/source_bt_width"
            android:layout_height="@dimen/source_bt_hight"
            style="@style/source_button_text"
            android:text="@string/source_radio"
            android:background="@drawable/source_radio" 
            />
        <Button
            android:id="@+id/bt_music"
            android:layout_width="@dimen/source_bt_width"
            android:layout_height="@dimen/source_bt_hight"
            android:layout_marginTop="@dimen/source_bt_padding"
           	style="@style/source_button_text"
            android:text="@string/source_usb"
            android:background="@drawable/source_usb" 
            />
        <Button
            android:id="@+id/bt_bluetoothmusic"
            android:layout_width="@dimen/source_bt_width"
            android:layout_height="@dimen/source_bt_hight"
            android:layout_marginTop="@dimen/source_bt_padding"
            style="@style/source_button_text"
            android:text="@string/bluetooth_music"
            android:background="@drawable/source_btmusic" 
            />
        <Button
            android:id="@+id/bt_phone"
            android:layout_width="@dimen/source_bt_width"
            android:layout_height="@dimen/source_bt_hight"
            android:layout_marginTop="@dimen/source_bt_padding"
            style="@style/source_button_text"
            android:text="@string/source_phone"
            android:background="@drawable/source_phone" 
            />
    </LinearLayout>
    
     <FrameLayout
        android:id="@+id/id_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_fragment_left"
         >
    </FrameLayout>

</RelativeLayout>
