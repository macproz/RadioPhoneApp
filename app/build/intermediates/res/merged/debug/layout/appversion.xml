<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/bluetoothsetting_tip_padding_top"
        android:layout_marginLeft="@dimen/bluetoothsetting_tip_padding_left"  
        >

        <!--<LinearLayout style="@style/common_horizontal_division_line_style"/>-->

        <RelativeLayout

            android:paddingLeft="0dp"
            android:layout_width="400dp"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/usbver"
                style="@style/set_item_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                />
        </RelativeLayout>

        <LinearLayout style="@style/common_horizontal_division_line_style"/>

        <RelativeLayout

            android:paddingLeft="0dp"
            android:layout_width="400dp"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/imagever"
                style="@style/set_item_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                />
        </RelativeLayout>

        <LinearLayout style="@style/common_horizontal_division_line_style"/>
        <RelativeLayout

            android:paddingLeft="0dp"
            android:layout_width="400dp"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/softver"
                style="@style/set_item_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                />
        </RelativeLayout>

        <LinearLayout style="@style/common_horizontal_division_line_style"/>
        <RelativeLayout

            android:paddingLeft="0dp"
            android:layout_width="400dp"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/btver"
                style="@style/set_item_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 />
        </RelativeLayout>

        <LinearLayout style="@style/common_horizontal_division_line_style"/>

        <RelativeLayout
            android:paddingLeft="0dp"
            android:layout_width="400dp"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/mcuver"
                style="@style/set_item_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 />

        </RelativeLayout>

        <LinearLayout style="@style/common_horizontal_division_line_style"/>
    </LinearLayout>

    <Button
        android:id="@+id/version_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_bluetooth_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />
    
</RelativeLayout>
