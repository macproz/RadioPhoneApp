<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all" >

    <ListView
        android:id="@+id/fm_list"
        android:layout_width="@dimen/bluetoothsetting_item_width"
        android:layout_height="@dimen/btdevice_list_hight"
       	android:listSelector="@color/transparent"
		android:scrollbars="none"
		android:layout_centerInParent="true"
		android:divider="@drawable/listline"
		android:layout_marginTop="@dimen/bluetoothsetting_list_padding_top"
		android:layout_marginLeft="@dimen/bluetoothsetting_list_padding_left"
        android:choiceMode="singleChoice"
        android:clickable="true"
        >
    </ListView>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/bluetoothsetting_tip_padding_top"
        android:layout_marginLeft="80dp"
        >
        
       <TextView
        android:id="@+id/connect_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fmcounts"
        android:textColor="@color/white" 
        android:textSize="20sp"
        />

    </LinearLayout>

    
    <Button
        android:id="@+id/fmcounts_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_bluetooth_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />
    
</RelativeLayout>
