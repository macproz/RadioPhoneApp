<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/loading_dialog_width"
    android:layout_height="@dimen/loading_dialog_hight"
    android:background="@drawable/tanchukuang"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/loading_image"
        android:layout_width="@dimen/loading_dialog_image_width"
        android:layout_height="@dimen/loading_dialog_image_hight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/loading_dialog_image_padding"
        android:background="@drawable/load1" />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_image"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/loading_dialog_text_padding"
        android:text="@string/connecting"
        android:textColor="@android:color/black"
        android:textSize="@dimen/loading_dialog_text_size" />

</RelativeLayout>